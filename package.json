{
  "name": "tezbox-desktop",
  "version": "1.0.0",
  "description": "TezBox is a multi-platform, decentralized and secure wallet for the Tezos blockchain",
  "main": "main.js",
  "scripts": {
    "start": "npm install && electron .",
    "pack": "build --dir",
    "dist-windows": "build -w",
    "dist-mac": "build -m",
    "dist-linux": "build -l"
  },
  "author": "TezTech",
  "license": "MIT",
  "build": {
    "productName": "TezBox-Wallet",
    "appId": "com.tezbox.wallet",
    "files": [
      "node_modules/",
      "app/",
      "main.js",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.png",
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true
    },
    "directories": {
      "output": "releases/build",
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@ledgerhq/hw-transport": "^4.24.0",
    "@ledgerhq/hw-transport-node-hid": "^4.24.0",
    "babel-runtime": "^6.26.0",
    "electron-prompt": "^1.2.0",
    "electron-store": "^2.0.0",
    "protobufjs": "^6.11.3",
    "protobufjs-old-fixed-webpack": "^3.8.5"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^20.29.0",
    "electron-rebuild": "^1.8.2"
  }
}
